<div class="col-md-6">
  <h3><center>Login</center></h3>
  <%= form_for @user, url: "/sessions", method: "post" do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email", class: " control-label" %>
      <%= f.text_field :email, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_digest, "Password", class: "control-label" %>
      <%= f.password_field :password, :required => true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Sign In", class: "btn btn-default center-bl form-control" %>
    </div>
  <% end %>
</div>

<div class="col-md-6">
  <h3><center>I don't have an account!</center></h3>
  <br>
  <button class="btn btn-default center-bl form-control"><%= link_to "Sign Up", new_user_path %></button>
</div>
